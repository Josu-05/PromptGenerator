<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionAuto.VentasPage"
             Title="Ventas">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Picker x:Name="pickerCliente" Title="Seleccionar Cliente"/>
            <Picker x:Name="pickerAuto" Title="Seleccionar Auto"/>
            <Entry x:Name="txtMonto" Placeholder="Monto" Keyboard="Numeric"/>
            <DatePicker x:Name="dateFecha" />

            <Button Text="Registrar Venta" Clicked="OnAgregarClicked"/>

            <CollectionView x:Name="listaVentas" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Eliminar" BackgroundColor="Red" Invoked="OnEliminarClicked"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Grid Padding="5">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Cliente}" FontAttributes="Bold"/>
                                    <Label Text="{Binding Auto}" />
                                    <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}" />
                                    <Label Text="{Binding Monto, StringFormat='Monto: ${0:F2}'}" />
                                </VerticalStackLayout>
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
