<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionAuto.MainPage"
             Title="Gestión Auto">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label x:Name="lblSaludo" FontSize="20" HorizontalOptions="Center"/>

        <Button Text="Autos" Clicked="OnAutosClicked"/>
        <Button Text="Clientes" Clicked="OnClientesClicked"/>
        <Button Text="Ventas" Clicked="OnVentasClicked"/>
        <Button Text="Reportes" Clicked="OnReportesClicked"/>
    </VerticalStackLayout>
</ContentPage>
