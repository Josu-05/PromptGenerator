<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionAuto.ReportesPage"
             Title="Reportes">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Ventas Registradas" FontSize="20" HorizontalOptions="Center"/>

            <CollectionView x:Name="listaReportes">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="LightGray" Margin="5" Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Cliente}" FontAttributes="Bold"/>
                                <Label Text="{Binding Auto}"/>
                                <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}"/>
                                <Label Text="{Binding Monto, StringFormat='Monto: ${0:F2}'}"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label x:Name="lblTotal" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
