<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionAuto.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">
        <Label Text="Iniciar Sesión" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
        <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True"/>

        <Button Text="Iniciar sesión" Clicked="OnLoginClicked"/>
    </VerticalStackLayout>
</ContentPage>
